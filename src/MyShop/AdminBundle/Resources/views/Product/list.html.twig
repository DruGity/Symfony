{% extends "@MyShopAdmin/layout.html.twig" %}
{% block body %}

<table border="1">
    <tr>
        <td>Модель</td>
        <td>Цена</td>
        <td>Категория</td>
    </tr>
{% for product in productList %}
    <tr>
        <td>{{ product.getModel() }}</td>
        <td>{{ product.getPrice() }}</td>
        <td>{{ product.getCategory().getName() }}</td>

        <td>
            <a href="{{ path("my_shop.admin.product_delete", {id:product.id}) }}">Удалить</a><br/>
            <a href="{{ path("my_shop_admin.product_edit", {id:product.id}) }}">Редактировать</a><br/>
            <a href="{{ path("my_shop_admin.product_photo_list", {idProduct:product.getId()}) }}">Управление картинками</a>
        </td>
    </tr>
{% endfor %}
</table>
<table border="1">
    <td>
        <a href="{{ path("my_shop_admin.product_add")}}">Добавить Товар</a><br/>
    </td>
</table >

{% endblock %}